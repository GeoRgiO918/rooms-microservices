<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="002-create-fil-metadata" author="georgii">
        <createTable tableName="file_metadata">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="file_url" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="user_owner_id" type="VARCHAR(255)"/>

            <column name="file_type" type="VARCHAR(255)"/>

            <column name="related_object_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="size_bytes" type="BIGINT"/>

            <column name="original_filename" type="VARCHAR(255)"/>

            <column name="bucketName" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="file_metadata"
                baseColumnNames="related_object_id"
                referencedTableName="related_object"
                referencedColumnNames="id"
                constraintName="fk_file_metadata_related_object"/>
    </changeSet>

</databaseChangeLog>
