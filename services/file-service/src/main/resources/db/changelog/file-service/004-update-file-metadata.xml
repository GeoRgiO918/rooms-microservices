<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="004-update-file-metadata" author="georgii">
        <!-- Удаляем старые колонки -->
        <dropColumn columnName="file_url" tableName="file_metadata"/>
        <dropColumn columnName="bucketName" tableName="file_metadata"/>

        <!-- Добавляем новую колонку -->
        <addColumn tableName="file_metadata">
            <column name="object_key" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>


</databaseChangeLog>
