<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="001-create-related-object" author="georgii">
        <createTable tableName="related_object">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="entity_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="entity_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Индекс для ускорения поиска по entity_type + entity_id -->
        <createIndex indexName="idx_related_object_type_id" tableName="related_object">
            <column name="entity_type"/>
            <column name="entity_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
